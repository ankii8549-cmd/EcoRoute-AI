# ============================================
# Production Environment Configuration
# Vehicle Emission Eco-Route System
# ============================================

# REQUIRED: Google Maps API Configuration
# Get your API key from: https://console.cloud.google.com/google/maps-apis
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# ============================================
# Server Configuration
# ============================================

# Host and Port (use 0.0.0.0 for production to accept all connections)
API_HOST=0.0.0.0
# PORT is typically set by the cloud platform (Render, Heroku, etc.)
# If not set by platform, defaults to 8000
PORT=8000

# ============================================
# File Paths
# ============================================

# Vehicle Database (Canada fuel consumption dataset)
VEHICLE_DATABASE_PATH=data/cleaned_fuel_consumption.csv

# ML Model Files (stacking ensemble model)
MODEL_PATH=models/stacking_ensemble.pkl
MODEL_COLUMNS_PATH=models/stacking_model_columns.pkl

# ============================================
# CORS Configuration
# ============================================

# Allowed origins for CORS (comma-separated list)
# For production, specify exact domains instead of "*"
# Example: https://yourdomain.com,https://www.yourdomain.com
CORS_ORIGINS=*

# Allow credentials in CORS requests
CORS_ALLOW_CREDENTIALS=true

# Allowed HTTP methods (comma-separated)
CORS_ALLOW_METHODS=*

# Allowed headers (comma-separated)
CORS_ALLOW_HEADERS=*

# ============================================
# Rate Limiting
# ============================================

# Maximum requests per period (per IP address)
RATE_LIMIT_REQUESTS=100

# Rate limit period in seconds
RATE_LIMIT_PERIOD=60

# ============================================
# Caching
# ============================================

# Route cache TTL in seconds (5 minutes = 300 seconds)
ROUTE_CACHE_TTL=300

# ============================================
# Logging Configuration
# ============================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Use INFO or WARNING for production
LOG_LEVEL=INFO

# Log file path (relative to project root)
LOG_FILE=app.log

# Log format: json or text
# Use json for production (easier to parse and analyze)
LOG_FORMAT=json

# ============================================
# External API Configuration
# ============================================

# Google Maps API timeout in seconds
MAPS_API_TIMEOUT=10

# Number of retries for Maps API calls
MAPS_API_RETRIES=3

# ============================================
# Environment
# ============================================

# Environment: development or production
# Set to "production" for production deployments
ENVIRONMENT=production
